{
  "name": "@ctrip/manus-core",
  "version": "1.0.1",
  "description": "A TypeScript implementation of the Manus agent framework",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "manus": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsx src/main.ts",
    "test": "jest --config jest.config.mjs --coverage",
    "coverage": "jest --config jest.config.mjs --coverage && jest-coverage-badges",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "agent",
    "ai",
    "llm",
    "manus"
  ],
  "files": [
    "dist",
    "config"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.53",
    "@modelcontextprotocol/sdk": "^1.11.1",
    "app": "^0.1.0",
    "axios": "^1.6.7",
    "chromadb": "^3.0.9",
    "create": "^0.5.5",
    "dotenv": "^16.4.5",
    "g": "^2.0.1",
    "mem0ai": "^2.1.36",
    "openai": "^4.28.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "react": "^19.1.0",
    "toml": "^3.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3"
  }
}
